<style>
    .postItem {
        margin-top: 30px;
    }
    .postItem_content{
        padding: 30px;
    }
</style>

<div class="col-md-4 postItem">
    <div class="card">        
        <div class="card-body postItem_content"> 
            <h4 class="card-title"><%= post.title %> </h1>
            <img width="300px" class="card-img-top" src="<%= post.imageUrl %> " alt="Card image cap">
            <h6 style="padding: 20px;" class="card-text"><%= post.description %> </h4>
            <% if (username.toLowerCase() == post.author) { %>
                <a href="/posts/edit/<%= post.id %> " class="btn btn-primary">Edit</a>
                <a href="/posts/delete/<%= post.id %> " class="btn btn-danger">Delete</a>
            <% } %>
            
        </div>
    </div>
</div>