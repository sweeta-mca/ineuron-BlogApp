<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', {title:'Posts'}) %>
  </head>
  <body>
    <%- include('../partials/nav.ejs',{path:'/posts', username:username})%>
    <h1>My Posts</h1>
    <div class="container">
      <div class="row ">
        <form 
        action="/posts/edit/<%= post.id %> " method="POST">
            <div class="form-group row">
              <label for="title" class="col-sm-6 col-form-label">Post Title</label>
              <div class="col-sm-10">
                <input value="<%= post.title %> " type="text" class="form-control" name="title">
              </div>
            </div>
            <div class="form-group row">
              <label for="description" class="col-sm-6 col-form-label">Post Description</label>
              <div class="col-sm-10">
                <input value="<%= post.description %> " type="text" class="form-control" name="description">
              </div>
            </div>
              
            <div class="form-group row">
              <div class="col-sm-14">
                <button type="submit" class="btn btn-primary">Edit Post</button>
              </div>
            </div>
          </form>
      </div>
    </div>
  </body>
</html>
